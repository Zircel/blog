mixin meta(title, date, description, image)
  title #{title}
  meta(itemprop="datePublished" content=`${date}` id="date")
  meta(property="og:title" content=`${title}`)
  meta(property="og:description" content=`${description}`)
  meta(property="description" content=`${description}`)
  meta(property="og:type" content="article")
  meta(property="og:img" content=`${image}`)
  
  meta(name="twitter:card" content="summary_large_image")
  meta(name="twitter:site" content="@zircel_")
  meta(name="twitter:title" content=`${title}`)
  meta(name="twitter:description" content=`${description}`)
  meta(name="twitter:image" content=`${image}`)


mixin authordate(author, date)
  - const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
  - const day = new Date(date).getDate()
  - const month = new Date(date).getMonth()
  - const year = new Date(date).getFullYear()

  span.author-date= `Written by ${author} - ${months[month]} ${day}, ${year}`